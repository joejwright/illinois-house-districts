<div class="page-header">
  <div class="row">
    <!-- Page header, center on small screens -->
    <h1 class="col-xs-12 col-sm-4 text-center text-left-sm"><i class="fa fa-cog page-header-icon"></i>&nbsp;&nbsp;Edit <%= resource_name.camelize %></h1>

    <div class="col-xs-12 col-sm-8">
      <div class="row">
        <hr class="visible-xs no-grid-gutter-h">
        <!-- "Create project" button, width=auto on desktops -->
        <div class="pull-right col-xs-12 col-sm-auto">
        </div>
        <!-- Margin -->
        <div class="visible-xs clearfix form-group-margin"></div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <%% if @<%= resource_name %>.errors.count > 0 %>
      <div class="alert alert-danger">
      <ul>
        <%% @<%= resource_name %>.errors.full_messages.each do |message| %>
          <li><%%= message %></li>
      <%% end %>
      </ul>
    </div>
  <%% end %>
  </div>
</div>
<%%= render :partial => 'form' %>
