<div class="row">
  <div class="col-sm-12">
    <%%= simple_form_for [:admin, @<%= resource_name %>], :html => { :class => 'panel form-horizontal' } do |f| %>
      <div class="panel-heading">
      <span class="panel-title"><%= resource_name.camelize %></span>
    </div>
    <div class="panel-body">
      <%- columns.each do |column| -%>
      <%%= f.input :<%= column.name %> %>
      <%- end -%>
    </div>
    <div class="panel-footer text-right">
      <%%= link_to "Cancel", admin_<%= plural_resource_name %>_path, :class => 'btn btn-danger' %>
      <%%= f.button :submit, :class => 'btn btn-primary' %>
    </div>
  <%% end %>
  </div>
</div>
