<% content_for :body_class, "page-signin-alt" %>
<h1 class="form-header">Sign up for an Account</h1>

<% flash.each do |name, message| %>
  <div class="alert alert-<%= 'success' if name == 'notice'; 'danger' if name == 'alert' %>" style="width: 360px; margin: 0 auto 20px;">
  <%= message %>
</div>
<% end %>

<% if @user.errors.count > 0 %>
<div class="alert alert-danger" style="width: 360px; margin: 0 auto 20px;">
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<!-- Form -->
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'panel' }) do |f| %>
  <div class="form-group">
    <%= f.input_field :email, :required => false, :autofocus => true, :class => 'input-lg', :placeholder => "email"  %>
  </div> <!-- / Username -->

  <div class="form-group">
    <%= f.input_field :password, :required => false, :autofocus => true, :class => 'input-lg', :placeholder => "password"  %>
  </div> <!-- / Password -->

  <div class="form-group">
    <%= f.input_field :password_confirmation, :required => false, :autofocus => true, :class => 'input-lg', :placeholder => "password confirmation"  %>
  </div> <!-- / Password -->

  <div class="form-group">
    <%= f.input_field :first_name, :required => false, :autofocus => true, :class => 'input-lg', :placeholder => "first name"  %>
  </div>

  <div class="form-group">
    <%= f.input_field :last_name, :required => false, :autofocus => true, :class => 'input-lg', :placeholder => "last name"  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign Up", :class => "btn btn-primary btn-block btn-lg" %>
  </div> <!-- / .form-actions -->
<% end %>
<!-- / Form -->
