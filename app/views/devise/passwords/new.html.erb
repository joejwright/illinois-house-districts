<% content_for :body_class, "page-signin-alt" %>
<h1 class="form-header">Forgot your password?</h1>

<% flash.each do |name, message| %>
  <div class="alert alert-<%= 'success' if name == 'notice'; 'danger' if name == 'alert' %>" style="width: 360px; margin: 0 auto 20px;">
  <%= message %>
</div>
<% end %>

<% if @user.errors.count > 0 %>
<div class="alert alert-danger" style="width: 360px; margin: 0 auto 20px;">
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<!-- Form -->
<%= simple_form_for(resource, :as => resource_name, :html => { :method => :post }, :url => password_path(resource_name), :html => { :class => 'panel' }) do |f| %>
  <div class="form-group">
    <%= f.input_field :email, :required => false, :autofocus => true, :class => 'input-lg', :placeholder => "email"  %>
  </div> <!-- / Username -->

  <div class="form-actions">
    <%= f.button :submit, "Send reset instructions", :class => "btn btn-primary btn-block btn-lg" %>
  </div> <!-- / .form-actions -->
<% end %>
<!-- / Form -->
